<?xml version="1.0" encoding="UTF-8"?>
<configuration name="kazoo.conf"
	description="General purpose Erlang C-node produced to better fit the Kazoo project">
	<settings>
		<param name="listen-ip" value="0.0.0.0" />
		<param name="listen-port" value="8031" />
		<!--<param name="cookie-file" value="/etc/freeswitch/autoload_configs/.erlang.cookie" 
			/> -->
		<param name="cookie" value="change_me" />
		<param name="shortname" value="false" />
		<param name="nodename" value="freeswitch" />

		<param name="event-stream-preallocate" value="32768" />
		<param name="receive-msg-preallocate" value="32768" />
		<param name="node-worker-threads" value="5" />
		<param name="receive-timeout" value="1" />
		<param name="event-stream-framing" value="4" />

		<param name="legacy-events" value="true" />

	</settings>

	<tweaks>
		<tweak name="interaction-id" value="false" />
		<tweak name="export-vars" value="false" />
		<tweak name="switch-uri" value="false" />
		<tweak name="replaces-call-id" value="false" />
		<tweak name="loopback-vars" value="false" />
		<tweak name="caller-id" value="false" />
		<tweak name="transfers" value="false" />
		<tweak name="bridge" value="false" />
		<tweak name="bridge-replaces-aleg" value="false" />
		<tweak name="bridge-replaces-call-id" value="false" />
		<tweak name="bridge-variables" value="false" />

		<tweak name="restore-caller-id-on-blind-xfer" value="false" />
	</tweaks>

</configuration>
